  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build-test",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "protocol": "inspector",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/dist/**/*.spec.js"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
